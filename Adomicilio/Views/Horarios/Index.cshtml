@model Adomicilio.Models.HorariosViewModel

@{
    ViewBag.Title = "Index";
}
<p>
    <div class="admincontainer">
        <ol class="breadcrumb">
            <li><a href="/Admin">Admin</a></li>
            <li><a href="/Admin">Empresas</a></li>
            <li><a href="#" class="active">Horarios</a></li>
        </ol>
        
      <div class="row">
<p>&nbsp</p>
<ul class="nav nav-tabs">
    <li role="presentation" class=""><a href="@Url.Action("Details", "Empresas",routeValues: new {  Id =  ViewBag.Number})">Detalles</a></li>
    <li role="presentation" class=""><a href="@Url.Action("Index","GruposMenus",routeValues: new { Id =  ViewBag.Number})">Categorias</a></li>
    <li role="presentation" class=""><a href="@Url.Action("Index", "Menus",routeValues: new { Idempresa =  ViewBag.Number})">Productos</a></li>
    <li role="presentation" class="active"><a href="@Url.Action("Index", "Horarios",routeValues: new { Id =  ViewBag.Number})">Horarios</a></li>
</ul>
<p>&nbsp</p>
        </div>
<div class="col-md-11">
@if (Model.loshorarios.Count < 7)
{
    <div class="col-md-12">

        @using (Html.BeginForm("Create", "Horarios", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-inline">
                      
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.IdEmpresa)
                <div class="form-group">
                    @Html.LabelFor(model => model.dia, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EnumDropDownListFor(model => model.dia, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.dia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StartHour, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.StartHour, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.StartHour, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EndtHour, htmlAttributes: new { @class = "control-label col-md-2" })
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.EndtHour, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.EndtHour, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Agregar" class="btn btn-default" />
                    </div>
                </div>
            </div>
        }
    </div>
}
    <table class="table">
        <tr>

            <th>
                @Html.DisplayNameFor(model => model.dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartHour)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndtHour)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.loshorarios)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.dia)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StartHour)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EndtHour)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
</div>
    