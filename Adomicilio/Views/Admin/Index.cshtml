                   <li> <a href="login.html"> Login Page</a> </li>
               </ul>
           </div>
</div>
<div class="col-md-9">
    <div class="row">
        <div class="panel-primary col-md-3">
            <a href="/Empresas">
                <button class="btn-lg btn-primary" type="button">
                    Empresas <span class="badge">@Html.DisplayFor(model => model.NroEmpresas)</span>
                </button>
            </a> 

        </div>
        <div class="panel-default col-md-3">
            <button class="btn-lg btn-danger" type="button">
                Usuarios <span class="badge">@Html.DisplayFor(model => model.NroClientes)</span>
            </button>
        </div>
        <div class="panel-default col-md-3">
            <button class="btn-lg btn-danger" type="button">
               Visitas <span class="badge">@ApplicationInstance.Application["Totaluser"]</span>
            </button>
        </div>

        <div class="panel-default col-md-3">
            <a href="/Contacto">
                <button class="btn-lg btn-success" type="button">
                    Notificaciones <span class="badge">@Html.DisplayFor(model => model.NroContactanosNuevas)</span>/@Html.DisplayFor(model => model.NroContactanos)
                </button></a>
</div>

    </div>
    <div class="row">
        <p></p>
    </div>
    <div class="row">
        <div class="panel-primary col-md-4">
            <div class="panel-heading">Empresas Afiliadas:</div>
            <div class="panel-body">Panel Content</div>


        </div>
        <div class="panel-default col-md-4">
            <div class="panel-heading">Usuarios</div>
            <div class="panel-body">@Html.DisplayFor(model => model.NroClientes)</div>


        </div>
        <div class="panel-info col-md-4">
            <div class="panel-heading">Visitas</div>
            <div class="panel-body">@ApplicationInstance.Application["Totaluser"]</div>


        </div>

    </div>
    <div class="row">
        <div class="panel-success col-md-12">
            <div class="panel-heading">Notificaciones</div>
            <div class="panel-body">Panel Content</div>


        </div>

    </div>
    
</div>
