@model Adomicilio.Models.Masterdashinfo
@{
   
}

<div class="container clearfix">
    <div class="navbar navbar-inverse navbar-fixed-top header ">
        <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
            <span class="icon-bar"> </span>
            <span class="icon-bar"> </span>
            <span class="icon-bar"> </span>
        </button>
        @Html.ActionLink("DeliExpress.com", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li> @Html.ActionLink("Inicio", "Index", "Home")</li>
                <li> @Html.ActionLink("Acerca de", "About", "Home")</li>
                <li> @Html.ActionLink("Contacto", "Contact", "Contacto")</li>
            </ul>
            @Html.Partial("_LoginPartial")
        </div>
    </div>
</div>
<div class="row">
  
    <ol class="breadcrumb">
        <li><a href="#">Master</a></li>
        <li class="active"><a href="#">DasBoard</a></li>
       
    </ol>
</div>
<div id="sidebar-collapse" class="col-sm-3 col-lg-2 sidebar">
           <div class="well">
               <ul class="nav menu">
                   <li class="active"> <a href="index.html"> Panel de Administrador</a> </li>
                   <li> <a href="../EMPRESAS/"> Afiliados</a> </li>
                   <li> <a href="../Categories/"> Categorias</a> </li>
